<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeWidth="2dp"
    app:strokeColor="@color/cardBorder">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/cardBackground">

        <!-- Header: Food Name -->
        <TextView
            android:id="@+id/foodNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Food Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/textPrimary"
            android:paddingBottom="8dp"/>

        <!-- Allergens Comparison -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="12dp">

            <!-- Ground Truth -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ground Truth"
                    android:textSize="10sp"
                    android:textColor="@color/textSecondary"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/expectedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="milk, egg"
                    android:textSize="12sp"
                    android:textColor="@color/textPrimary"
                    android:paddingTop="2dp"/>
            </LinearLayout>

            <!-- Predicted -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Predicted"
                    android:textSize="10sp"
                    android:textColor="@color/textSecondary"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/predictedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="milk, egg"
                    android:textSize="12sp"
                    android:textColor="@color/textPrimary"
                    android:paddingTop="2dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginBottom="10dp"/>

        <!-- === PREDICTION QUALITY METRICS (Table 2) === -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š Prediction Quality Metrics"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@color/purple_700"
            android:paddingBottom="6dp"/>

        <!-- Row 1: Precision + Recall -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/precisionText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="P: 0.000"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/success"/>

            <TextView
                android:id="@+id/recallText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="R: 0.000"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/success"/>
        </LinearLayout>

        <!-- Row 2: F1 Score + Accuracy -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/f1Text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="F1: 0.000"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/purple_700"/>

            <TextView
                android:id="@+id/accuracyText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Acc: 0.000"
                android:textSize="12sp"
                android:textColor="@color/textPrimary"/>
        </LinearLayout>

        <!-- Row 3: Exact Match + Hamming Loss -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/exactMatchText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="EM: No"
                android:textSize="11sp"
                android:textColor="@color/textSecondary"/>

            <TextView
                android:id="@+id/hammingLossText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HL: 0.000"
                android:textSize="11sp"
                android:textColor="@color/textSecondary"/>
        </LinearLayout>

        <!-- Row 4: FNR + TP,FP,FN,TN -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/fnrText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="FNR: 0.000"
                android:textSize="11sp"
                android:textColor="@color/warning"/>

            <TextView
                android:id="@+id/confusionText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TP:0 FP:0 FN:0 TN:0"
                android:textSize="9sp"
                android:textColor="@color/textSecondary"/>
        </LinearLayout>

        <!-- === SAFETY-ORIENTED METRICS (Table 3) === -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ›¡ï¸ Safety Metrics"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@color/error"
            android:paddingTop="4dp"
            android:paddingBottom="6dp"/>

        <!-- Hallucination -->
        <TextView
            android:id="@+id/hallucinationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hallucination: No"
            android:textSize="11sp"
            android:textColor="@color/textSecondary"
            android:paddingBottom="2dp"/>

        <!-- Over-Prediction -->
        <TextView
            android:id="@+id/overPredictionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Over-Prediction: No"
            android:textSize="11sp"
            android:textColor="@color/textSecondary"
            android:paddingBottom="2dp"/>

        <!-- Abstention -->
        <TextView
            android:id="@+id/abstentionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abstention: N/A"
            android:textSize="11sp"
            android:textColor="@color/textSecondary"
            android:paddingBottom="8dp"/>

        <!-- === ON-DEVICE EFFICIENCY METRICS (Table 4) === -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âš¡ On-Device Efficiency Metrics"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@color/teal_700"
            android:paddingTop="4dp"
            android:paddingBottom="6dp"/>

        <!-- Row 1: Latency + TTFT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="3dp">

            <TextView
                android:id="@+id/latencyText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Latency: 0.0s"
                android:textSize="10sp"
                android:textColor="@color/metricText"/>

            <TextView
                android:id="@+id/ttftText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TTFT: 0ms"
                android:textSize="10sp"
                android:textColor="@color/metricText"/>
        </LinearLayout>

        <!-- Row 2: ITPS + OTPS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="3dp">

            <TextView
                android:id="@+id/itpsText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ITPS: 0"
                android:textSize="10sp"
                android:textColor="@color/metricText"/>

            <TextView
                android:id="@+id/otpsText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="OTPS: 0"
                android:textSize="10sp"
                android:textColor="@color/metricText"/>
        </LinearLayout>

        <!-- Row 3: OET + Total Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="3dp">

            <TextView
                android:id="@+id/oetText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="OET: 0ms"
                android:textSize="10sp"
                android:textColor="@color/metricText"/>

            <TextView
                android:id="@+id/totalTimeText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total: 0ms"
                android:textSize="10sp"
                android:textColor="@color/metricText"/>
        </LinearLayout>

        <!-- Row 4: Memory Metrics -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/javaHeapText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Java: 0MB"
                android:textSize="10sp"
                android:textColor="@color/metricText"/>

            <TextView
                android:id="@+id/nativeHeapText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Native: 0MB"
                android:textSize="10sp"
                android:textColor="@color/metricText"/>

            <TextView
                android:id="@+id/pssText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PSS: 0MB"
                android:textSize="10sp"
                android:textColor="@color/metricText"/>
        </LinearLayout>

        <!-- Status -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âœ“ Saved to Firebase"
            android:textSize="10sp"
            android:textColor="@color/success"
            android:paddingTop="10dp"
            android:textStyle="italic"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
