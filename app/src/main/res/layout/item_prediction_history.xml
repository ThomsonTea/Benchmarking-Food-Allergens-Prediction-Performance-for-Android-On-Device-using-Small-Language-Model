<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/predictionCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/productNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Name"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/modelNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Model Name"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/timestampText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jan 30, 2026"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/statusBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ“ GOOD"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:padding="8dp"
                android:background="@drawable/bg_badge_success"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Ground Truth & Predicted -->
        <TextView
            android:id="@+id/groundTruthText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actual: milk, egg"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/predictedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Predicted: milk, egg, soy"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginBottom="12dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="8dp" />

        <!-- TABLE 2: Quality Metrics Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š Quality Metrics (Table 2)"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#6200EA"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_rounded_light_purple"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <!-- Row 1: F1, Precision, Recall, Accuracy -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/f1ScoreText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="F1: 0.850"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#6200EA" />

                <TextView
                    android:id="@+id/precisionText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="P: 0.920"
                    android:textSize="13sp"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/recallText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="R: 0.800"
                    android:textSize="13sp"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/accuracyText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Acc: 0.900"
                    android:textSize="13sp"
                    android:textColor="#333333" />
            </LinearLayout>

            <!-- Row 2: EM, Hamming Loss, FNR -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/exactMatchText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="EM: Yes"
                    android:textSize="12sp"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/hammingLossText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="HL: 0.056"
                    android:textSize="12sp"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/fnrText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="FNR: 0.200"
                    android:textSize="12sp"
                    android:textColor="#F44336" />
            </LinearLayout>

            <!-- Row 3: Confusion Matrix -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tpText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TP: 2"
                    android:textSize="12sp"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/fpText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="FP: 1"
                    android:textSize="12sp"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/fnText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="FN: 0"
                    android:textSize="12sp"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tnText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TN: 6"
                    android:textSize="12sp"
                    android:textColor="#333333" />
            </LinearLayout>
        </LinearLayout>

        <!-- TABLE 3: Safety Metrics Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ›¡ï¸ Safety Metrics (Table 3)"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FF5722"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_rounded_light_orange"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/hallucinationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hallucination: No"
                android:textSize="13sp"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/overPredictionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Over-Prediction: Yes (1)"
                android:textSize="13sp"
                android:textColor="#333333"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/abstentionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abstention: N/A"
                android:textSize="13sp"
                android:textColor="#333333"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- TABLE 4: Efficiency Metrics Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âš¡ Efficiency Metrics (Table 4)"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_rounded_light_blue"
            android:padding="12dp">

            <!-- Row 1: Latency, TTFT -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/latencyText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="14s"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#2196F3" />

                <TextView
                    android:id="@+id/ttftText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TTFT: 10775ms"
                    android:textSize="12sp"
                    android:textColor="#333333" />
            </LinearLayout>

            <!-- Row 2: ITPS, OTPS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/itpsText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ITPS: 14"
                    android:textSize="12sp"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/otpsText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="OTPS: 1"
                    android:textSize="12sp"
                    android:textColor="#333333" />
            </LinearLayout>

            <!-- Row 3: OET, Total Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/oetText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="OET: 14248ms"
                    android:textSize="12sp"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/totalTimeText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tot: 12808ms"
                    android:textSize="12sp"
                    android:textColor="#333333" />
            </LinearLayout>

            <!-- Row 4: Memory -->
            <TextView
                android:id="@+id/memoryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mem: 16MB"
                android:textSize="12sp"
                android:textColor="#333333"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Expandable Details Section (Hidden by Default) -->
        <LinearLayout
            android:id="@+id/detailsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Additional Details"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/ingredientsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingredients: ..."
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/confusionMatrixText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confusion Matrix Details"
                android:textSize="12sp"
                android:textColor="#666666"
                android:fontFamily="monospace"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/safetyMetricsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Safety Metrics Details"
                android:textSize="12sp"
                android:textColor="#666666" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
