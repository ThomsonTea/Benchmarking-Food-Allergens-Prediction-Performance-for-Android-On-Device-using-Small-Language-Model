<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/predictionCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/cardBorder">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/cardBackground">

        <!-- Header: Product Name + Status Badge -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/productNameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Product Name"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"/>

            <TextView
                android:id="@+id/statusBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ“ PERFECT"
                android:textSize="9sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/bg_badge_success"
                android:paddingHorizontal="6dp"
                android:paddingVertical="3dp"
                android:visibility="visible"/>
        </LinearLayout>

        <!-- Model Name + Timestamp -->
        <TextView
            android:id="@+id/modelNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Model: Qwen 2.5 1.5B"
            android:textSize="10sp"
            android:textColor="@color/textSecondary"
            android:paddingBottom="2dp"/>

        <TextView
            android:id="@+id/timestampText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ• Jan 27, 2026 10:45 AM"
            android:textSize="10sp"
            android:textColor="@color/textSecondary"
            android:textStyle="italic"
            android:paddingBottom="10dp"/>

        <!-- Ground Truth vs Predicted -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ground Truth"
                    android:textSize="9sp"
                    android:textColor="@color/textSecondary"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/groundTruthText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Actual: milk, egg"
                    android:textSize="11sp"
                    android:textColor="@color/textPrimary"
                    android:paddingTop="2dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Predicted"
                    android:textSize="9sp"
                    android:textColor="@color/textSecondary"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/predictedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Predicted: milk, egg"
                    android:textSize="11sp"
                    android:textColor="@color/textPrimary"
                    android:paddingTop="2dp"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginBottom="8dp"/>

        <!-- PREDICTION QUALITY METRICS (Table 2) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š Quality Metrics"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/purple_700"
            android:paddingBottom="4dp"/>

        <!-- P, R, F1, Acc -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="3dp">

            <TextView
                android:id="@+id/precisionText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="P: 0.000"
                android:textSize="10sp"
                android:textColor="@color/success"/>

            <TextView
                android:id="@+id/recallText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="R: 0.000"
                android:textSize="10sp"
                android:textColor="@color/success"/>

            <TextView
                android:id="@+id/f1ScoreText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="F1: 0.000"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/purple_700"/>

            <TextView
                android:id="@+id/accuracyText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Acc: 0.000"
                android:textSize="10sp"
                android:textColor="@color/textPrimary"/>
        </LinearLayout>

        <!-- EM, HL, FNR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="3dp">

            <TextView
                android:id="@+id/exactMatchText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="EM: Yes"
                android:textSize="9sp"
                android:textColor="@color/textSecondary"/>

            <TextView
                android:id="@+id/hammingLossText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HL: 0.000"
                android:textSize="9sp"
                android:textColor="@color/textSecondary"/>

            <TextView
                android:id="@+id/fnrText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="FNR: 0.000"
                android:textSize="9sp"
                android:textColor="@color/warning"/>
        </LinearLayout>

        <!-- Confusion Matrix -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confusion Matrix:"
            android:textSize="9sp"
            android:textColor="@color/textSecondary"
            android:paddingBottom="2dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tpText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TP: 0"
                android:textSize="10sp"
                android:textColor="@color/success"/>

            <TextView
                android:id="@+id/fpText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="FP: 0"
                android:textSize="10sp"
                android:textColor="@color/error"/>

            <TextView
                android:id="@+id/fnText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="FN: 0"
                android:textSize="10sp"
                android:textColor="@color/error"/>

            <TextView
                android:id="@+id/tnText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TN: 0"
                android:textSize="10sp"
                android:textColor="@color/success"/>
        </LinearLayout>

        <!-- SAFETY METRICS (Table 3) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ›¡ï¸ Safety Metrics"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/error"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/hallucinationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hallucination: No"
            android:textSize="9sp"
            android:textColor="@color/textSecondary"
            android:paddingBottom="2dp"/>

        <TextView
            android:id="@+id/overPredictionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Over-Prediction: No"
            android:textSize="9sp"
            android:textColor="@color/textSecondary"
            android:paddingBottom="2dp"/>

        <TextView
            android:id="@+id/abstentionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abstention: N/A"
            android:textSize="9sp"
            android:textColor="@color/textSecondary"
            android:paddingBottom="8dp"/>

        <!-- ON-DEVICE EFFICIENCY METRICS (Table 4) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âš¡ Efficiency Metrics"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/teal_700"
            android:paddingBottom="4dp"/>

        <!-- Latency, TTFT, ITPS, OTPS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="2dp">

            <TextView
                android:id="@+id/latencyText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lat: 0.0s"
                android:textSize="9sp"
                android:textColor="@color/metricText"/>

            <TextView
                android:id="@+id/ttftText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TTFT: 0ms"
                android:textSize="9sp"
                android:textColor="@color/metricText"/>

            <TextView
                android:id="@+id/itpsText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ITPS: 0"
                android:textSize="9sp"
                android:textColor="@color/metricText"/>

            <TextView
                android:id="@+id/otpsText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="OTPS: 0"
                android:textSize="9sp"
                android:textColor="@color/metricText"/>
        </LinearLayout>

        <!-- OET, Total, Memory -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/oetText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="OET: 0ms"
                android:textSize="9sp"
                android:textColor="@color/metricText"/>

            <TextView
                android:id="@+id/totalTimeText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tot: 0ms"
                android:textSize="9sp"
                android:textColor="@color/metricText"/>

            <TextView
                android:id="@+id/memoryText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mem: 0MB"
                android:textSize="9sp"
                android:textColor="@color/metricText"/>
        </LinearLayout>

        <!-- Expandable Details Container (kept for compatibility but now shows everything by default) -->
        <LinearLayout
            android:id="@+id/detailsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:visibility="gone">

            <!-- Ingredients -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredients:"
                android:textSize="9sp"
                android:textStyle="bold"
                android:textColor="@color/textSecondary"
                android:paddingBottom="2dp"/>

            <TextView
                android:id="@+id/ingredientsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingredients: ..."
                android:textSize="9sp"
                android:textColor="@color/textSecondary"
                android:paddingBottom="6dp"/>

            <!-- Detailed Confusion Matrix -->
            <TextView
                android:id="@+id/confusionMatrixText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TP: 0 | FP: 0 | FN: 0 | TN: 0"
                android:textSize="9sp"
                android:textColor="@color/textSecondary"
                android:paddingBottom="6dp"/>

            <!-- Safety Analysis -->
            <TextView
                android:id="@+id/safetyMetricsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âœ“ No safety issues"
                android:textSize="9sp"
                android:textColor="@color/textSecondary"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
