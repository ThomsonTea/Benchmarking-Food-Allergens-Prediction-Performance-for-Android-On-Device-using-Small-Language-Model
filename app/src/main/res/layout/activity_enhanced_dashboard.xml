<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar -->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/primary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/backButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Back"
                        android:src="@drawable/ic_arrow_back"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Model Performance Dashboard"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <!-- Champion Models Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/gold">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/goldBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ† Champion Models"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:paddingBottom="16dp"/>

                <!-- Best Accuracy Model -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="@color/white"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¯"
                        android:textSize="32sp"
                        android:paddingEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Most Accurate Model"
                            android:textSize="12sp"
                            android:textColor="@color/textSecondary"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/bestAccuracyModelText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Loading..."
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/textPrimary"
                            android:paddingTop="2dp"/>

                        <TextView
                            android:id="@+id/bestAccuracyScoreText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Accuracy: 0.000"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/success"
                            android:paddingTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Best F1 Model -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="@color/white"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ¥‡"
                        android:textSize="32sp"
                        android:paddingEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Best F1 Score"
                            android:textSize="12sp"
                            android:textColor="@color/textSecondary"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/bestModelText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Loading..."
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/textPrimary"
                            android:paddingTop="2dp"/>

                        <TextView
                            android:id="@+id/bestF1ScoreText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="F1: 0.000"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_700"
                            android:paddingTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Fastest Model -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âš¡"
                        android:textSize="32sp"
                        android:paddingEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fastest Model"
                            android:textSize="12sp"
                            android:textColor="@color/textSecondary"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/fastestModelText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Loading..."
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/textPrimary"
                            android:paddingTop="2dp"/>

                        <TextView
                            android:id="@+id/fastestLatencyText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Avg Latency: 0.0s"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/teal_700"
                            android:paddingTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Overall Stats Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/overallStatsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Overall Statistics"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:paddingBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/totalPredictionsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 predictions"
                            android:textColor="@color/textPrimary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total"
                            android:textColor="@color/textSecondary"
                            android:textSize="12sp"
                            android:paddingTop="4dp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/divider" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/totalModelsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 models"
                            android:textColor="@color/textPrimary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Models"
                            android:textColor="@color/textSecondary"
                            android:textSize="12sp"
                            android:paddingTop="4dp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/divider" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/avgF1AllText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="F1: --"
                            android:textColor="@color/textPrimary"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/bestF1AllText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Best: --"
                            android:textColor="@color/textSecondary"
                            android:textSize="12sp"
                            android:paddingTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Best Model Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/bestModelCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/gold">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/goldBackground">

                <TextView
                    android:id="@+id/bestModelNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ† Best Model"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:id="@+id/bestModelF1Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="F1: 0.000"
                    android:textSize="16sp"
                    android:textColor="@color/textPrimary"
                    android:paddingBottom="4dp"/>

                <TextView
                    android:id="@+id/bestModelCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 predictions"
                    android:textSize="14sp"
                    android:textColor="@color/textSecondary"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp">

            <Button
                android:id="@+id/viewHistoryButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="ðŸ“‹ View History"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/exportButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="ðŸ“¥ Export Excel"
                android:textAllCaps="false"/>
        </LinearLayout>

        <!-- Model Comparison Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Models"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/textPrimary"
            android:paddingHorizontal="16dp"
            android:paddingBottom="8dp"/>

        <!-- Progress Bar (shown while loading) -->
        <ProgressBar
            android:id="@+id/dashboardProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:visibility="visible" />

        <!-- Empty State -->
        <TextView
            android:id="@+id/emptyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="No predictions found"
            android:textColor="@color/textSecondary"
            android:textSize="16sp"
            android:visibility="gone"
            android:paddingBottom="32dp"/>

        <!-- RecyclerView for model comparison -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/modelComparisonRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingBottom="16dp"
            android:clipToPadding="false"
            android:visibility="gone"/>

    </LinearLayout>

</ScrollView>
