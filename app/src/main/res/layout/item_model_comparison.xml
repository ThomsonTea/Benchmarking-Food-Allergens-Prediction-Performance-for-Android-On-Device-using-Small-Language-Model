<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Model Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/rankText"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="#1"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_rank_circle" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/modelNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qwen 2.5 1.5B"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/predictionCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200 predictions"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/bestBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ† BEST"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#FFD700"
                android:padding="6dp"
                android:background="@drawable/bg_badge_gold"
                android:visibility="gone" />
        </LinearLayout>

        <!-- TABLE 2: Prediction Quality Metrics -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š Prediction Quality (Table 2)"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#6200EA"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_rounded_light_purple"
            android:padding="12dp">

            <!-- Row 1: F1, Precision, Recall -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="F1 Score"
                        android:textSize="11sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/f1Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.856"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#6200EA"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Precision"
                        android:textSize="11sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/precisionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.921"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recall"
                        android:textSize="11sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/recallText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.800"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Row 2: Accuracy, EMR, Hamming Loss -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Accuracy"
                        android:textSize="11sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/accuracyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.934"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EMR"
                        android:textSize="11sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/emrText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="72%"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="H-Loss"
                        android:textSize="11sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/hammingLossText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.067"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Row 3: FNR -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="False Negative Rate: "
                    android:textSize="12sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/fnrText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10%"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#F44336" />
            </LinearLayout>
        </LinearLayout>

        <!-- TABLE 3: Safety-Oriented Metrics -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ›¡ï¸ Safety Metrics (Table 3)"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FF5722"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_rounded_light_orange"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hallucination"
                        android:textSize="11sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/hallucinationRateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12%"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#F44336"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Over-Pred"
                        android:textSize="11sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/overPredictionRateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18%"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FF9800"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Abstention"
                        android:textSize="11sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/abstentionAccuracyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="90%"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- TABLE 4: On-Device Efficiency Metrics -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âš¡ Efficiency Metrics (Table 4)"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_rounded_light_blue"
            android:padding="12dp">

            <!-- Row 1: Latency, TTFT -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avg Latency"
                        android:textSize="11sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/latencyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14.3s"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#2196F3"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TTFT"
                        android:textSize="11sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/ttftText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10775ms"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Row 2: ITPS, OTPS -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ITPS"
                        android:textSize="11sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/itpsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OTPS"
                        android:textSize="11sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/otpsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Row 3: Memory -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Java"
                        android:textSize="11sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/javaHeapText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0MB"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Native"
                        android:textSize="11sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/nativeHeapText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1MB"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PSS"
                        android:textSize="11sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/pssText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15MB"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Timestamp -->
        <TextView
            android:id="@+id/timestampText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Updated: Jan 30, 2026"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginTop="12dp"
            android:layout_gravity="center" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
