<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/modelCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeWidth="2dp"
    app:strokeColor="@color/cardBorder">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Rank + Model Name + Best Badge -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <!-- Rank Badge -->
            <TextView
                android:id="@+id/rankText"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:text="#1"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/purple_500"
                android:gravity="center"
                android:layout_marginEnd="10dp"/>

            <!-- Model Name + Prediction Count -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/modelNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qwen 2.5 1.5B"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"/>

                <TextView
                    android:id="@+id/predictionCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200 predictions"
                    android:textSize="10sp"
                    android:textColor="@color/textSecondary"
                    android:paddingTop="2dp"/>
            </LinearLayout>

            <!-- Best Badge -->
            <TextView
                android:id="@+id/bestBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ† BEST"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/gold"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- Timestamp -->
        <TextView
            android:id="@+id/timestampText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ• Updated: Jan 27, 2026"
            android:textSize="9sp"
            android:textColor="@color/textSecondary"
            android:textStyle="italic"
            android:paddingBottom="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginBottom="10dp"/>

        <!-- PREDICTION QUALITY METRICS (Table 2) - AGGREGATED -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š Avg Quality Metrics (Table 2)"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@color/purple_700"
            android:paddingBottom="6dp"/>

        <!-- Row 1: Accuracy + F1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accuracy"
                    android:textSize="9sp"
                    android:textColor="@color/textSecondary"/>

                <TextView
                    android:id="@+id/accuracyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/success"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="F1 Score"
                    android:textSize="9sp"
                    android:textColor="@color/textSecondary"/>

                <TextView
                    android:id="@+id/f1ScoreText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_700"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Row 2: Precision + Recall -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/precisionText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="P: 0.000"
                android:textSize="11sp"
                android:textColor="@color/textPrimary"/>

            <TextView
                android:id="@+id/recallText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="R: 0.000"
                android:textSize="11sp"
                android:textColor="@color/textPrimary"/>
        </LinearLayout>

        <!-- Row 3: Exact Match Rate + Hamming Loss + FNR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/exactMatchRateText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="EMR: 0.0%"
                android:textSize="10sp"
                android:textColor="@color/textSecondary"/>

            <TextView
                android:id="@+id/hammingLossText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HL: 0.000"
                android:textSize="10sp"
                android:textColor="@color/textSecondary"/>

            <TextView
                android:id="@+id/fnrText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="FNR: 0.0%"
                android:textSize="10sp"
                android:textColor="@color/warning"/>
        </LinearLayout>

        <!-- SAFETY METRICS (Table 3) - AGGREGATED RATES -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ›¡ï¸ Safety Rates (Table 3)"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@color/error"
            android:paddingTop="4dp"
            android:paddingBottom="6dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/hallucinationRateText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hallucination: 0.0%"
                android:textSize="10sp"
                android:textColor="@color/textSecondary"/>

            <TextView
                android:id="@+id/overPredictionRateText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Over-Pred: 0.0%"
                android:textSize="10sp"
                android:textColor="@color/textSecondary"/>

            <TextView
                android:id="@+id/abstentionAccText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Abst: 0.0%"
                android:textSize="10sp"
                android:textColor="@color/textSecondary"/>
        </LinearLayout>

        <!-- ON-DEVICE EFFICIENCY METRICS (Table 4) - AGGREGATED -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âš¡ Avg Efficiency (Table 4)"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@color/teal_700"
            android:paddingTop="4dp"
            android:paddingBottom="6dp"/>

        <!-- Row 1: Latency + TTFT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="3dp">

            <TextView
                android:id="@+id/latencyText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="â± 0.0s avg"
                android:textSize="11sp"
                android:textColor="@color/metricText"/>

            <TextView
                android:id="@+id/ttftText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TTFT: 0ms"
                android:textSize="10sp"
                android:textColor="@color/metricText"/>
        </LinearLayout>

        <!-- Row 2: ITPS + OTPS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="3dp">

            <TextView
                android:id="@+id/itpsText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ITPS: 0"
                android:textSize="10sp"
                android:textColor="@color/metricText"/>

            <TextView
                android:id="@+id/otpsText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="OTPS: 0"
                android:textSize="10sp"
                android:textColor="@color/metricText"/>
        </LinearLayout>

        <!-- Row 3: OET + Total Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="3dp">

            <TextView
                android:id="@+id/oetText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="OET: 0ms"
                android:textSize="10sp"
                android:textColor="@color/metricText"/>

            <TextView
                android:id="@+id/totalTimeText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total: 0ms"
                android:textSize="10sp"
                android:textColor="@color/metricText"/>
        </LinearLayout>

        <!-- Row 4: Memory (Java + Native + PSS) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/javaHeapText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Java: 0MB"
                android:textSize="9sp"
                android:textColor="@color/metricText"/>

            <TextView
                android:id="@+id/nativeHeapText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Native: 0MB"
                android:textSize="9sp"
                android:textColor="@color/metricText"/>

            <TextView
                android:id="@+id/pssText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PSS: 0MB"
                android:textSize="9sp"
                android:textColor="@color/metricText"/>
        </LinearLayout>

        <!-- Expandable Details (kept for compatibility) -->
        <LinearLayout
            android:id="@+id/detailsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“Š Click to expand for detailed statistics"
                android:textSize="10sp"
                android:textColor="@color/textSecondary"
                android:textStyle="italic"/>
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
